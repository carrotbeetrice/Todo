<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp"
    android:background="@color/white"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left"
        android:gravity="left"
        android:layout_weight="4">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/calendar_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="What even am I doing"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18dp"
                android:paddingRight="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/calendar_task_importance"
                android:text="!!!"
                android:textSize="18dp"
                android:paddingLeft="5dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/calendar_task_description"
            android:text="just kill me now please"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Information Systems and Programming"
            android:id="@+id/calendar_module_name" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:id="@+id/calendar_due_time"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:text="14:30"/>


</LinearLayout>